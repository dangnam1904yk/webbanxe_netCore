@model IEnumerable<webbanxe.Models.Bike>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Bike</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Home</a></li>
                <li class="breadcrumb-item"><a>Bike</a></li>
                <li class="breadcrumb-item active">List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <p>
        <a asp-action="CreateOrUpdate" asp-controller="Bikes">Thêm xe</a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NameBike)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PricePromotion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageBike)
                            </th>
                            <th style="display:none">
                                @Html.DisplayNameFor(model => model.DescriptionBike)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeBike)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameBike)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PricePromotion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td style="max-width: 300px">
                                    @foreach (var i in item.ImageBike.Split(";"))
                                    {
                                        <img src="~/img/@i"  width="100px" height="100px">
                                    }
                                </td>
                                <td style="display:none;">
                                    @Html.DisplayFor(modelItem => item.DescriptionBike)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TypeBike.NameType)
                                </td>
                                <td>
                                    <a asp-action="CreateOrUpdate" asp-route-id="@item.IdBike">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdBike">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdBike">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>

